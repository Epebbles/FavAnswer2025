# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, '15.1'  # ✅ Ensure minimum iOS version is 12.0+

use_modular_headers!

$FirebaseSDKVersion = '11.8.1' # ✅ Set to the latest stable version


prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'FavAnswer2025' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # ✅ Add Firebase dependencies
  pod 'RNFBApp', :path => '../node_modules/@react-native-firebase/app'
  pod 'RNFBAuth', :path => '../node_modules/@react-native-firebase/auth'

   # ✅ Ensure Firebase SDK modules are defined
   pod 'Firebase/Auth', $FirebaseSDKVersion
   pod 'Firebase/Core', $FirebaseSDKVersion
   pod 'Firebase/Analytics', $FirebaseSDKVersion

  # ✅ Add Facebook SDK for react-native-fbsdk-next
  pod 'FBSDKCoreKit', '~> 18.0'
  pod 'FBSDKLoginKit', '~> 18.0'
  pod 'FBSDKShareKit', '~> 18.0'


  # ✅ Post-install hook (ensure compatibility)
  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
    )

    # ✅ Fix duplicate FBSDKVersion warning
    installer.pods_project.targets.each do |target|
      if target.name.include?('FBSDK')
        target.build_configurations.each do |config|
          config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
        end
      end
    end
  end
end
